# Dockerfile.api
FROM node:20

WORKDIR /app

RUN corepack enable && corepack prepare pnpm@latest --activate


COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./

RUN pnpm install

COPY apps ./apps
COPY packages ./packages
COPY tools ./tools
COPY tsconfig.json ./



EXPOSE 3000

CMD ["pnpm", "run", "dev", "--filter", "api-server"]
