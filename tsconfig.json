{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "@shared/*": ["packages/shared/src/*"],
        "@mq/*": ["packages/mq/src/*"]
      }
    },
    "include": [
      "apps/**/*",
      "packages/**/*"
    ]
  }
  